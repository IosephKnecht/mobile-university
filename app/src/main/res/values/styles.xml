<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/icons</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="InputForm" parent="@style/Regular">
        <item name="android:maxLines">1</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Regular">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="HeaderText" parent="@style/Regular">
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="HeaderText.Small" parent="@style/HeaderText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="HeaderText.Medium" parent="@style/HeaderText">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="HeaderText.Large" parent="@style/HeaderText">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="PrimaryText" parent="@style/Regular">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="PrimaryText.Small" parent="@style/PrimaryText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="PrimaryText.Medium" parent="@style/PrimaryText">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="PrimaryText.Large" parent="@style/PrimaryText">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="SecondaryText" parent="@style/Regular">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="SecondaryText.Small" parent="@style/SecondaryText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="SecondaryText.Medium" parent="@style/SecondaryText">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="SecondaryText.Large" parent="@style/SecondaryText">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="IconStyle">
        <item name="android:tint">@color/primary</item>
    </style>

    <style name="IconStyle.Small">
        <item name="android:layout_height">@dimen/small_icon_height</item>
        <item name="android:layout_width">@dimen/small_icon_height</item>
    </style>

    <style name="IconStyle.Medium">
        <item name="android:layout_height">@dimen/medium_icon_height</item>
        <item name="android:layout_width">@dimen/medium_icon_height</item>
    </style>

    <style name="IconStyle.Large">
        <item name="android:layout_height">@dimen/large_icon_height</item>
        <item name="android:layout_width">@dimen/large_icon_height</item>
    </style>

</resources>
